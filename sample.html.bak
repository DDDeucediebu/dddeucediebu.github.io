        // 语言切换功能
        function switchLanguage(lang) {
            // 更新页面标题
            document.title = translations[lang].title;
            
            // 更新导航菜单
            const navButtons = document.querySelectorAll('.nav-button');
            navButtons[0].textContent = translations[lang].nav_sample;
            navButtons[1].textContent = translations[lang].nav_commission;
            navButtons[2].textContent = translations[lang].nav_other;
            
            // 保持语言按钮文本固定为"CN/JP/EN"
            const langButtons = document.querySelectorAll('.lang-link');
            langButtons[0].textContent = 'CN';
            langButtons[1].textContent = 'JP';
            langButtons[2].textContent = 'EN';
            
            // 更新音乐播放器提示文本
            const audioElement = document.querySelector('.audio-player source');
            if (audioElement && audioElement.nextSibling) {
                audioElement.nextSibling.textContent = translations[lang].player_text;
            }
            
            // 更新作品展示页面内容
            if (document.querySelector('.main-content h1')) {
                document.querySelector('.main-content h1').textContent = translations[lang].sample_title;
                document.querySelector('.main-content p').textContent = translations[lang].sample_description;
            }
            
            // 更新作品项
            const workItems = document.querySelectorAll('.work-item');
            if (workItems.length > 0) {
                workItems[0].querySelector('.work-title').textContent = translations[lang].work_title_1;
                workItems[0].querySelector('.work-description').textContent = translations[lang].work_description_1;
                workItems[1].querySelector('.work-title').textContent = translations[lang].work_title_2;
                workItems[1].querySelector('.work-description').textContent = translations[lang].work_description_2;
                workItems[2].querySelector('.work-title').textContent = translations[lang].work_title_3;
                workItems[2].querySelector('.work-description').textContent = translations[lang].work_description_3;
                workItems[3].querySelector('.work-title').textContent = translations[lang].work_title_4;
                workItems[3].querySelector('.work-description').textContent = translations[lang].work_description_4;
                workItems[4].querySelector('.work-title').textContent = translations[lang].work_title_5;
                workItems[4].querySelector('.work-description').textContent = translations[lang].work_description_5;
                workItems[5].querySelector('.work-title').textContent = translations[lang].work_title_6;
                workItems[5].querySelector('.work-description').textContent = translations[lang].work_description_6;
            }
            
            // 保存语言选择到本地存储
            localStorage.setItem('selectedLang', lang);
            
            // 更新语言按钮的active状态
            langButtons.forEach(btn => btn.classList.remove('lang-link-active'));
            langButtons.forEach(btn => {
                if (btn.getAttribute('data-lang') === lang) {
                    btn.classList.add('lang-link-active');
                }
            });
        }

        // 页面加载时初始化
        document.addEventListener('DOMContentLoaded', function() {
            // 恢复保存的语言设置
            const savedLang = localStorage.getItem('selectedLang') || 'CN';
            
            // 初始化语言切换功能
            const langButtons = document.querySelectorAll('.lang-link');
            langButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const lang = this.getAttribute('data-lang');
                    switchLanguage(lang);
                });
            });
            
            // 设置初始语言
            switchLanguage(savedLang);
        });
    </script>
    <style>
        /* 作品展示页面特有样式 */
        .works-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
        }
        
        .work-item {
            border: 1px solid #ddd;
            border-radius: 4px;
            overflow: hidden;
            background-color: #f9f9f9;
        }
        
        .work-image {
            width: 100%;
            height: 150px;
            background-color: #e9e9e9;
        }
        
        .work-info {
            padding: 10px;
        }
        
        .work-title {
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 5px;
        }
        
        .work-description {
            font-size: 12px;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="page">
        <div class="sidebar">
            <div class="sidebar-top">
                <a href="index.html" class="logo-circle">
                </a>
                <nav class="sidebar-nav">
                    <a href="sample.html" class="nav-button">sample</a>
                    <a href="commission.html" class="nav-button">commission</a>
                    <a href="other.html" class="nav-button">其他事项</a>
                </nav>
                <div class="sidebar-lang">
                    <div class="lang-toggle">
                        <a href="#" class="lang-link lang-link-active" data-lang="CN">CN</a>
                        <span>/</span>
                        <a href="#" class="lang-link" data-lang="JP">JP</a>
                        <span>/</span>
                        <a href="#" class="lang-link" data-lang="EN">EN</a>
                    </div>
                </div>
                <script>
                    // 语言切换功能
                    document.addEventListener('DOMContentLoaded', function() {
                        const langButtons = document.querySelectorAll('.lang-link');
                        langButtons.forEach(button => {
                            button.addEventListener('click', function(e) {
                                e.preventDefault();
                                // 移除所有按钮的active类
                                langButtons.forEach(btn => btn.classList.remove('lang-link-active'));
                                // 为当前点击的按钮添加active类
                                this.classList.add('lang-link-active');
                                // 这里可以添加实际的语言切换逻辑
                                const selectedLang = this.textContent;
                                console.log('切换到语言:', selectedLang);
                                // 保存语言选择到本地存储
                                localStorage.setItem('selectedLang', selectedLang);
                                // 触发语言切换事件
                                document.dispatchEvent(new CustomEvent('langChange', { detail: selectedLang }));
                            });
                        });
                        
                        // 页面加载时恢复语言选择
                        const savedLang = localStorage.getItem('selectedLang');
                        if (savedLang) {
                            const savedLangButton = Array.from(langButtons).find(btn => btn.textContent === savedLang);
                            if (savedLangButton) {
                                langButtons.forEach(btn => btn.classList.remove('lang-link-active'));
                                savedLangButton.classList.add('lang-link-active');
                            }
                        }
                    });
                </script>
            </div>
            <div class="sidebar-bottom">
                <div class="sidebar-player">
                    <audio class="audio-player" controls>
                        <source src="" type="audio/mpeg">
                        您的浏览器不支持音频元素。
                    </audio>
